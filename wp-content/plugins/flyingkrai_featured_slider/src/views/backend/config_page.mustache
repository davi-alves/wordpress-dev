<div class="wrap">
  {{{ screenIcon }}}
  {{# updated? }}
  <div class='updated'>
    <p>Theme settings updated successfully.</p>
  </div>
  {{/ updated? }}
  <h2>
    {{ pageTitle }}
    <a href="#" class="add-new-h2">Adicionar Novo</a>
  </h2>

  <br>
  <br>

  <form action="{{ form.action }}" method="post">
    {{{ form.nonce }}}
    <table class="wp-list-table widefat" cellspacing="0" style="width:40%">
      <thead>
        <tr>
          <th scope="col" class="manage-column" width="25%">Ordem</th>
          <th scope="col" class="manage-column">Imagem</th>
          <th scope="col" class="manage-column" width="10%">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{# images }}
          {{> backend/_partials/image_tr }}
        {{/ images }}
        {{^ images }}
          <tr valign="top">
            <th colspan="3">Nenhuma imagem cadastrada.</th>
          </tr>
        {{/ images }}
      </tbody>
    </table>
    <p class="submit">
      <button type="submit" class="button button-primary">Salvar alterações</button>
    </p>
  </form>
</div>

<script type="text/template" id="image_tr-template">
  {{> backend/_partials/image_tr}}
</script>
